<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unick.sensordemo.fragments.ServiceContralFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="注意！此為實驗版APP。" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_marginLeft="10dp"
            android:text="為了方便標記資料，請選擇搭乘的交通工具！" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:columnCount="3"
            >
            <Button
                android:id="@+id/button_drive"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnSpan="3"
                android:layout_rowSpan="1"
                android:layout_gravity="fill"
                android:text="自行開車"
                />
            <Button
                android:id="@+id/button_lift"
                android:layout_column="0"
                android:layout_row="1"
                android:text="搭乘小客車"
                />
            <Button
                android:id="@+id/button_bus"
                android:layout_column="1"
                android:layout_row="1"
                android:text="搭乘公車"
                />
            <Button
                android:id="@+id/button_train"
                android:layout_column="2"
                android:layout_row="1"
                android:text="搭乘火車"
                />
            <Button
                android:id="@+id/button_motor"
                android:layout_column="0"
                android:layout_row="2"
                android:text="騎乘機車"
                />
            <Button
                android:id="@+id/button_taxi"
                android:layout_column="1"
                android:layout_row="2"
                android:text="搭乘計程車"
                />
            <Button
                android:id="@+id/button_mrt"
                android:layout_column="2"
                android:layout_row="2"
                android:text="搭乘捷運"
                />

        </GridLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridLayout"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="點擊啟動背景服務" />

        <Button
            android:id="@+id/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/gridLayout"
            android:layout_centerVertical="true"
            android:text="啟動"
            />

        <Button
            android:id="@+id/button_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_start"
            android:layout_alignBottom="@+id/button_start"
            android:layout_centerHorizontal="true"
            android:text="結束"
            />


    </RelativeLayout>

</FrameLayout>
